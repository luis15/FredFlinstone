if (xhr || req.query.partial === 'middle')
  .main-content
    .main-head
      block main
      block menu
    block content
  block out
else
  doctype html
  html(lang=req.getLocale())
    include ../includes/head.pug
    body
      #wrap
        include ../includes/header.pug
        .main-content
          .main-head
            block main
            block menu
          block content
        block out
    include ../includes/footer.pug
    include ../includes/foot.pug
